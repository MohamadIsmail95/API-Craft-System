@page "/Account/ForgotPasswordConfirmation"
@using ApiCraftSystem.Components.Layout
@layout ForgotPasswordLatout

<PageTitle>Forgot password confirmation</PageTitle>

<div class="container d-flex justify-content-center align-items-center min-vh-100 px-3">
    <div class="text-center" style="max-width: 480px;">
        <h1 class="display-5 fw-bold mb-3" style="color:white">Forgot Password Confirmation</h1>
        <p role="alert" class="fs-5 text-secondary" style="color:white">
            Please check your email to reset your password.
        </p>
        <a href="/Account/Login" class="btn btn-primary mt-4 px-4 py-2">Back to Login</a>
    </div>
</div>
