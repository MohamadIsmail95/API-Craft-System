@rendermode InteractiveServer
@attribute [StreamRendering]
@attribute [Authorize]
@inherits StarRatingBase
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Web

<label style="font-size:medium;color:gray">Please Rate System</label>


    <div class="rating-stars">

        @for (int i = 1; i <= 5; i++)
        {
            int starIndx = i;
            <span class="star @(i <= Rating ? "filled" : "")"
                  @onclick="() => SetRating(starIndx)"
                  @onmouseover="() => HoverRating = i"
                  @onmouseout="() => HoverRating = 0">
                &#9733; <!-- Unicode star -->
            </span>
        }
    </div>



